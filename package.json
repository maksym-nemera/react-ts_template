{
  "name": "react-ts_template",
  "homepage": "https://maksym-nemera.github.io/react-ts_template/",
  "version": "0.1.0",
  "private": true,
  "author": "Maksym Nemera",
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "dotenv": "^16.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.2",
    "react-router-dom": "^6.15.0",
    "react-scripts": "5.0.1",
    "sass": "^1.66.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.48",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-redux": "^7.1.26",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "gh-pages": "^6.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "stylelint": "^15.10.3",
    "stylelint-config-recommended-scss": "^13.0.0",
    "stylelint-scss": "^5.1.0",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "eslint . --ignore-path .gitignore",
    "style": "stylelint src/**/*.scss --ignore-path .gitignore",
    "format": "prettier --write . --ignore-path .gitignore --ignore-path .prettierignore",
    "fix-style": "npm run format && npm run style && npm run lint -- --fix",
    "prepare": "husky install",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "lint-staged": {
    "*.{js,css,scss,html,tsx,jsx}": "npm run format",
    "*.{js,jsx,ts,tsx}": "npm run lint",
    "*.{css,scss}": "npm run style"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
